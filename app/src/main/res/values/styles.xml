<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.CheckBoxTheme" parent="android:Widget.DeviceDefault.Light.CompoundButton.RadioButton"/>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/teal_700</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipSpacing">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="textStartPadding">7dp</item>
        <item name="textEndPadding">7dp</item>
        <item name="android:textSize">10sp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipCornerRadius">9dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextHeader2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardFeed" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="CommonButton" parent="Widget.Material3.Button">
        <item name="cardCornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>